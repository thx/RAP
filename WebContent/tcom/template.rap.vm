        function getUsers(callback, teamId) {
            if ($.local('users')) {
                callback($.local('users'));
                return;
            }
            var params = {};
            if (teamId) {
                params.id = teamId;
            }
            $.get($.route('org.account.all'), params, function(data) {
                users = data.users;
                $.local('users', users);
                callback(users);
