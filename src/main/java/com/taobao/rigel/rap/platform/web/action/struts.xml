<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <package name="platform" extends="rap-default" namespace="/platform">
        <action name="home" class="com.taobao.rigel.rap.platform.web.action.PlatformAction" method="home">
            <result name="success" type="velocity">/platform/home.vm</result>
        </action>
        <action name="test" class="com.taobao.rigel.rap.platform.web.action.PlatformAction" method="test">
            <result name="success" type="velocity">/platform/test.vm</result>
        </action>
        <action name="log" class="com.taobao.rigel.rap.platform.web.action.PlatformAction" method="log">
            <result name="success" type="velocity">/platform/log.vm</result>
        </action>
        <action name="monitor" class="com.taobao.rigel.rap.platform.web.action.PlatformAction" method="monitor">
            <result name="success" type="velocity">/platform/monitor.vm</result>
        </action>
        <action name="realtimeUpdate" class="com.taobao.rigel.rap.platform.web.action.PlatformAction"
                method="realtimeUpdate">
            <result name="success" type="velocity">/bcom/json.cb.vm</result>
        </action>
    </package>
</struts>
